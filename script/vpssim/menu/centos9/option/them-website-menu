#!/bin/bash

prompt="Vui long chon/ Please choose (0-Backspace):"
options=( "Add Website" "Add Wordpress website" "Add Wordpress demo" "SSL Certificates" "FTP Management" "Add Database" "Domain Pointers" "Remove Pointers" "Domain vHost" )

printf "=========================================================================\n"
printf "                            Website & Code\n"
printf "=========================================================================\n"

PS3="$prompt"
select opt in "${options[@]}"; do 

    case "$REPLY" in

    1) clear && /etc/vpssim/menu/centos9/option/them-website;;
    2) clear && /etc/vpssim/menu/centos9/option/them-wordpress-website;;
    3) clear && /etc/vpssim/menu/centos9/option/them-wordpress-demo;;
    4) clear && /etc/vpssim/menu/centos9/option/ssl-certificates;;
    5) clear && /etc/vpssim/menu/centos9/option/ftpserver-menu;;
    6) clear && /etc/vpssim/menu/centos9/option/add-database-before;;
    7) clear && /etc/vpssim/menu/centos9/option/domain-pointers;;
    8) clear && /etc/vpssim/menu/centos9/option/remove-pointers;;
    9) clear && /etc/vpssim/menu/centos9/option/domain-vhost;;
    0) clear && vpssim;;
    *) echo "Vui long chon theo danh sach/ Please choose from the list"; continue;;

    esac

done
